<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tonghs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tonghs.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.tonghs.AddModuleActivity"
            android:label="@string/action_add_module"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.tonghs.AddAreaActivity"
            android:label="@string/action_add_area"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.tonghs.ModuleMgrActivity"
            android:label="@string/action_module_mg"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.tonghs.AreaMgrActivity"
            android:label="@string/action_area_mg"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.tonghs.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.tonghs.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
