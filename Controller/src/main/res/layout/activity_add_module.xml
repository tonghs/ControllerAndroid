                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="功能6"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:gravity="right"
                    android:text="电位1名称"/>
                <EditText
                    android:id="@+id/txt_module_ep1"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="电位1"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:gravity="right"
                    android:text="电位2名称"/>
                <EditText
                    android:id="@+id/txt_module_ep2"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="电位2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
