                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="功能4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:gravity="right"
                    android:text="功能5名称"/>
