                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="电位5"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:gravity="right"
                    android:text="电位6名称"/>
                <EditText
                    android:id="@+id/txt_module_ep6"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="电位6"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:gravity="right"
                    android:text="电位7名称"/>
                <EditText
                    android:id="@+id/txt_module_ep7"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="电位7"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:gravity="right"
                    android:text="电位8名称"/>
                <EditText
                    android:id="@+id/txt_module_ep8"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:hint="电位8"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_add_module"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确 定"
                    android:layout_gravity="right"
                    android:onClick="btnAddModuleClick"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>